  .messages
    = render @messages
  .main-chat__message-form
    .form-wrapper.form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form-wrapper__text-areae', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form-wrapper__file-choose' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'invisible'
        = f.submit 'Send', class: 'submit-button'
